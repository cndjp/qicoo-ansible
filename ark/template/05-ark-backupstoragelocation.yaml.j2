apiVersion: ark.heptio.com/v1
kind: BackupStorageLocation
metadata:
  name: default
  namespace: heptio-ark
spec:
  provider: aws
  objectStorage:
    bucket: {{ S3.BACKUP.BUCKET }}
  config:
    region: {{ REGION }}
backupSyncPeriod: {{ ARK.BACKUP_SYNC_PERIOD }}
gcSyncPeriod: {{ ARK.GC_SYNC_PERIOD }}
scheduleSyncPeriod: {{ ARK.SCHEDULE_SYNC_PERIOD }}
restoreOnlyMode: {{ ARK.RESTORE_ONLY_MODE }}
